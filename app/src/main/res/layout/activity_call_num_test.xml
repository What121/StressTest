<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/call_num_title"
        android:textSize="32sp" />
	
    <TextView 
        android:id="@+id/testtime_tv" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize = "20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title"
        android:visibility="invisible"
        android:text="@string/already_test_time"/>
    
    
    <LinearLayout
        android:id="@+id/callnumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/testtime_tv"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >
      
        <TextView
            android:id="@+id/callnumber_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/call_num_tv"
            android:textSize="20sp" />

        <Button
            android:id="@+id/callnumber_btn"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_set" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/maxtime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/callnumber"
        android:orientation="horizontal" >
      
        <TextView
            android:id="@+id/maxtime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/max_test_time"
            android:textSize="20sp" />
        

        <Button
            android:id="@+id/maxtime_btn"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_set" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/start_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_start" />

        <Button
            android:id="@+id/stop_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_stop" />

        <Button
            android:id="@+id/exit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_exit" />
    </LinearLayout>

</RelativeLayout>